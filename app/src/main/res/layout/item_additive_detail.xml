<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Additive code -->
            <TextView
                android:id="@+id/additiveCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E330"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary" />

            <!-- Additive name -->
            <TextView
                android:id="@+id/additiveName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citric Acid"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <!-- Additive category -->
            <TextView
                android:id="@+id/additiveCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acidity Regulators / Anti-caking Agents"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Additive safety -->
            <TextView
                android:id="@+id/additiveSafety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generally recognized as safe"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <!-- health safety -->
            <TextView
                android:id="@+id/additiveHealthConcerns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Concerns"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
