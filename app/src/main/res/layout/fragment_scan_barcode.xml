<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Add data binding variables here if needed -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <!-- Header Container -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Product Barcode"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position the barcode within the frame"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8"
                android:gravity="center" />

        </LinearLayout>

        <!-- Scanner View -->
        <com.budiyev.android.codescanner.CodeScannerView
            android:id="@+id/scanner_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:autoFocusButtonColor="@color/primary"
            app:autoFocusButtonVisible="true"
            app:flashButtonColor="@color/primary"
            app:flashButtonVisible="true"
            app:frameAspectRatioHeight="1"
            app:frameAspectRatioWidth="1"
            app:frameColor="@color/primary"
            app:frameCornersRadius="12dp"
            app:frameCornersSize="60dp"
            app:frameSize="0.75"
            app:frameThickness="4dp"
            app:frameVerticalBias="0.5"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            app:layout_constraintBottom_toTopOf="@id/barcode_display_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="1"
            app:maskColor="#88000000" />

        <!-- Scanned Barcode Display -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/barcode_display_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scanned Barcode"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/currentScannedBarcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No barcode scanned"
                    android:textColor="@color/primary_text"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Container -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Search Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/ScanForProduct"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Search Product"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:elevation="8dp"
                app:rippleColor="@color/primary_variant"
                android:enabled="false"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
