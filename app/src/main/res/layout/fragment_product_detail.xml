<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="project.nutriscan.model.Nutriments" />
        <variable
            name="productInfo"
            type="project.nutriscan.model.Product" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_main"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Header with App Title -->
            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="NutriScan Analysis"
                android:textColor="@color/pastel_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Product Image CardView -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/product_image_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/app_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_search_24" />

                        <TextView
                            android:id="@+id/image_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Image"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                             />

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:strokeColor="@color/card_stroke"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/product_image"
                            android:layout_width="280dp"
                            android:layout_height="200dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="Product Image"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_search_24" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nutritional Score Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/nutritional_score_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/score_background"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_image_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/nutritional_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`Nutri-Score: ` + data.nutrition_score_fr}"
                        android:textColor="@color/score_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Product Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Product_Info_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/info_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/info_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nutritional_score_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/product_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Information"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/info_item_background"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{productInfo.product_name}"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/info_item_background"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brand"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/product_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{productInfo.brands}"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/info_item_background"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manufactured In"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/product_manufacturing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{productInfo.manufacturing_places}"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Eco-Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Ecoscore_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/eco_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/eco_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Product_Info_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/ecoscore_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Environmental Impact"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/eco_item_background"
                            android:padding="12dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eco-Score Grade"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ecoscore_grade"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{productInfo.ecoscore_grade}"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/eco_item_background"
                            android:padding="12dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eco-Score"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ecoscore_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{productInfo.ecoscore_score + `/100`}"
                                android:textColor="@color/text_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nutritional Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/nutritional_info_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/nutrition_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/nutrition_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Ecoscore_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/nutritional_info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nutritional Facts"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Nutrition Grid Layout -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Row 1 -->
                        <TextView
                            android:id="@+id/energy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Energy\n` + data.energy + ` kcal`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@id/carbs"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/carbs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Carbs\n` + data.carbohydrates + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/energy"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- Row 2 -->
                        <TextView
                            android:id="@+id/proteins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Protein\n` + data.proteins + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@id/fat"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/energy" />

                        <TextView
                            android:id="@+id/fat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Fat\n` + data.fat + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/proteins"
                            app:layout_constraintTop_toBottomOf="@id/carbs" />

                        <!-- Row 3 -->
                        <TextView
                            android:id="@+id/sugar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Sugar\n` + data.sugars + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@id/fiber"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/proteins" />

                        <TextView
                            android:id="@+id/fiber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Fiber\n` + data.fiber + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/sugar"
                            app:layout_constraintTop_toBottomOf="@id/fat" />

                        <!-- Row 4 -->
                        <TextView
                            android:id="@+id/salt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Salt\n` + data.salt + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@id/sodium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sugar" />

                        <TextView
                            android:id="@+id/sodium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Sodium\n` + data.sodium + ` mg`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/salt"
                            app:layout_constraintTop_toBottomOf="@id/fiber" />

                        <!-- Row 5 -->
                        <TextView
                            android:id="@+id/fat_per_100g"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Fat per 100g\n` + data.fat_100g + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toStartOf="@id/saturated_fat"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/salt" />

                        <TextView
                            android:id="@+id/saturated_fat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/nutrition_item_background"
                            android:padding="12dp"
                            android:text="@{`Saturated Fat\n` + data.saturated_fat + ` g`}"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/fat_per_100g"
                            app:layout_constraintTop_toBottomOf="@id/sodium" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nutrients Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/NutrientsLevel_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/nutrients_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/nutrients_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nutritional_info_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/nutrients_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nutrients Summary"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/nutrition_item_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nutrient Levels"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/nutrients_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`Summary :` + productInfo.nutrient_levels_tags}"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Ingredients Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Ingredients_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/ingredients_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/ingredients_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NutrientsLevel_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            />

                        <TextView
                            android:id="@+id/Ingredients_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredients"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/ingredients_item_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredient List"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/ingredients_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{productInfo.ingredients_text}"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Allergens Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Allergen_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/allergen_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/allergen_card_stroke"
                app:strokeWidth="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Ingredients_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                           />

                        <TextView
                            android:id="@+id/Allergen_info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Allergen Information"
                            android:textColor="@color/allergen_text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                             />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/allergen_item_background"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginEnd="8dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contains Allergens"
                                android:textColor="@color/allergen_text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/allergen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`Allergen :`+ productInfo.allergens}"
                            android:textColor="@color/allergen_text_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Additives Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Additives_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/additives_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/additives_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Allergen_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            />

                        <TextView
                            android:id="@+id/Additives_info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Food Additives"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/additives_item_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Additives Found"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/additives"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{`Additives :`+ productInfo.additives_tags}"
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Countries Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Countries_Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/countries_card_background"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/countries_card_stroke"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/Additives_Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/sold_in_countries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Global Availability"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                             />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/countries_item_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sold in Countries"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/countries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
